# DIAN Compliance Platform - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=your-secure-database-password
DB_HOST=postgres
DB_NAME=dian_saas
DB_USER=admin
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# =============================================================================
# ENCRYPTION KEYS
# =============================================================================
FERNET_MASTER_KEY=your-fernet-master-key-change-in-production
MFA_ENCRYPTION_KEY=your-mfa-encryption-key-change-in-production

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME=dian_compliance_platform
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=50
ALLOWED_UPLOAD_DIR=/app/uploads
QUARANTINE_DIR=/app/quarantine

# =============================================================================
# RATE LIMITING
# =============================================================================
DEFAULT_REQUESTS_PER_MINUTE=60
AUTH_REQUESTS_PER_MINUTE=10
FILE_UPLOAD_REQUESTS_PER_MINUTE=20

# =============================================================================
# MFA CONFIGURATION
# =============================================================================
MFA_ISSUER_NAME=DIAN Compliance Platform
MFA_DIGITS=6
MFA_PERIOD=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_DIR=/app/logs
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_LOG_ROTATION=true
MAX_LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_COOKIES=false

# =============================================================================
# DIAN SPECIFIC CONFIGURATION
# =============================================================================
DIAN_API_URL=https://api.dian.gov.co
DIAN_API_KEY=your-dian-api-key
DIAN_ENVIRONMENT=test

# =============================================================================
# AWS CONFIGURATION (Optional for production)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@dian-compliance.com

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
BUILD_DATE=2024-01-01
VCS_REF=latest
VERSION=1.0.0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
WORKERS=1

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production:
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# WORKERS=4
# SECURE_COOKIES=true
# ENABLE_FILE_LOGGING=true
# LOG_LEVEL=WARNING
